{$R *.dfm}

uses Unit3, Unit5;

procedure TForm4.Button1Click(Sender: TObject);
begin
Form3.Show;
close;
end;

procedure TForm4.Button2Click(Sender: TObject);
begin
Form5.Show;
close;
end;




procedure TForm4.Button3Click(Sender: TObject);
begin
  MediaPlayer1.FileName := ExtractFilePath(Application.ExeName) + 'media\a.wav'; // путь к файлу относительный
  MediaPlayer1.Open;
  MediaPlayer1.Play;
end;

end.
